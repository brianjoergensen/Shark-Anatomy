.header-below-topbanner,
.footer-container
  display none !important

.anatomi-wrapper
  width 100%
  height auto
  min-height 200px
  float left

.anatomi-shark
  width 100%
  height auto
  min-height 432px
  background url(../img/shark-anatomy-shark-series.png) top left no-repeat
  background-size 100%
  border-radius 0 4px 4px 0
  float left

ul#anatomi-list
  width 25%
  float left

  li
    font-weight 400
    font-family 'Play', sans-serif
    color #ccc
    font-size 16px
    display block
    background-color rgba(255,255,255,0.1)
    padding 6px 10px
    border-radius 2px
    cursor pointer
    margin-bottom 10px
    box-sizing border-box
    -webkit-transition all ease 0.4s
    -moz-transition all ease 0.4s
    -o-transition all ease 0.4s
    transition all ease 0.4s

    &:hover
      background-color mainColor
      // transform translate3d(5px,-5px, 100px)
      // padding 5px 10px 5px 15px
      padding 6px 10px 6px 20px
      position relative
      color #fff

      &:before
        content '\f0da'
        display inline-block
        float left
        position absolute
        left 10px
        font-family FontAwesome
        font-size 10px
        line-height 20px
        
        -webkit-animation fadeinArrow 0.8s
        -moz-animation fadeinArrow 0.8s
        -ms-animation fadeinArrow 0.8s
        -o-animation fadeinArrow 0.8s
        animation fadeinArrow 0.8s

      &:after
        content ''
        width 100%
        display inline-block
        position absolute
        top 0
        left 0
        padding 15px 0
        border-radius 2px
        border-bottom 4px solid #003e8b
        
        -webkit-animation borderSlideIn 0.4s
        -moz-animation borderSlideIn 0.4s
        -ms-animation borderSlideIn 0.4s
        -o-animation borderSlideIn 0.4s
        animation borderSlideIn 0.4s

  p
    margin 0

.anatomi-content
  width 73%
  float left
  margin-left 2%
  display none

  -webkit-animation fadein 0.8s
  -moz-animation fadein 0.8s
  -ms-animation fadein 0.8s
  -o-animation fadein 0.8s
  animation fadein 0.8s

  img
    position absolute

  h1
    font-size 26px
    font-weight 400
    font-family 'Play', sans-serif
    color mainColor
    text-transform uppercase
    text-shadow 0 0 20px #0373FD

  p
    font-size 16px
    color #ccc
    line-height 26px

